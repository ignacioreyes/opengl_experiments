{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${fileDirname}/**.cpp",
                "${fileDirname}/vendor/stb_image/**.cpp",
                "${fileDirname}/vendor/imgui/**.cpp",
                "${fileDirname}/tests/**.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lglfw",
                //"-lGLU",
                "-lGL",
                "-lGLEW",
                "-Wall",
                "-I${fileDirname}/vendor",
                "-O2",
                "-ffast-math",
                "-march=native"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}